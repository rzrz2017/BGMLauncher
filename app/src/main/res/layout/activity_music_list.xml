<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:paddingLeft="@dimen/header_margin"
    android:paddingRight="@dimen/header_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="朝花夕拾"
            android:textColor="@color/default_color"
            android:textSize="@dimen/title_size" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/ic_radio_line"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_mlist_vline" />


        <ListView
            android:layout_gravity="center"
            android:id="@+id/list"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:listSelector="@drawable/adapter_selector"
            android:scrollbars="none"></ListView>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_mlist_vline" />

    </LinearLayout>


</LinearLayout>


