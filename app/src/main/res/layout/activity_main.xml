<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:id="@+id/li_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_home"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/header_margin"
                android:layout_marginTop="@dimen/header_margin"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/btn_margin"
                    android:background="@null"
                    android:drawableLeft="@drawable/btn_search"
                    android:text="@string/str_search"
                    android:textColor="@color/default_color" />

                <Button
                    android:id="@+id/btn_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/btn_margin"
                    android:background="@null"
                    android:drawableLeft="@drawable/btn_me"
                    android:text="@string/str_me"
                    android:textColor="@color/default_color" />

                <Button
                    android:id="@+id/btn_kw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/btn_margin"
                    android:background="@null"
                    android:drawableLeft="@drawable/btn_kw"
                    android:text="酷我音乐"
                    android:textColor="@color/default_color"
                    />

                <Button
                    android:id="@+id/btn_be_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/btn_margin"
                    android:background="@null"
                    android:drawableLeft="@drawable/btn_bg_be_member"
                    android:visibility="gone" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/header_margin"
                android:gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="12:30"
                        android:textColor="@color/default_color"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/wifi_img"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:scaleType="centerInside" />


                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <com.dsn.andy.bgmlauncher.recycleview.MyRecyclerView
            android:id="@+id/id_recyclerview_horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:scrollbars="none" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="@dimen/header_margin"
            android:layout_marginRight="@dimen/header_margin"
            android:gravity="center"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">

                <Button
                    android:id="@+id/btn_internet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@drawable/internet_selector"
                    android:padding="0dp"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">

                <Button
                    android:id="@+id/btn_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@drawable/radio_selector"
                    android:padding="0dp"

                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">

                <!--     <Button
                         android:id="@+id/btn_smarthome"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_margin="0dp"
                         android:background="@drawable/smarthome_selector"
                         android:padding="0dp"
                         />
                     -->
                <!-- <Button
                     android:id="@+id/btn_assistant"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_margin="0dp"
                     android:background="@drawable/assistant_selsct"
                     android:padding="0dp"
                     />
     -->
                <ImageView

                    android:id="@+id/playing_img"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">

                <Button
                    android:id="@+id/btn_tool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@drawable/tool_selector"
                    android:padding="0dp"


                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">

                <Button
                    android:id="@+id/btn_smart_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@drawable/more_selector"
                    android:padding="0dp"


                    />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/header_margin"
            android:layout_marginRight="@dimen/header_margin"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="@string/str_internet"
                android:textColor="@color/default_color"
                android:textSize="@dimen/nav_text_size"

                />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="@string/str_radio"
                android:textColor="@color/default_color"
                android:textSize="@dimen/nav_text_size" />
            <!--
                   <TextView
                       android:layout_width="1dp"
                       android:layout_height="wrap_content"
                       android:background="@null"
                       android:text="@string/str_smarthome"
                       android:textColor="@color/default_color"
                       android:gravity="center"
                       android:layout_weight="1"
                       android:textSize="@dimen/nav_text_size"
                       />
            -->
            <LinearLayout

                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">


                <com.dsn.andy.bgmlauncher.view.MarqueeTextView
                    android:id="@+id/song"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="尚未播放歌曲"
                    android:textColor="@color/default_color"
                    android:textSize="16sp" />

            </LinearLayout>
            <!--<TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="@string/str_assistanr"
                android:textColor="@color/default_color"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/nav_text_size"
                />-->
            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="@string/str_tool"
                android:textColor="@color/default_color"
                android:textSize="@dimen/nav_text_size" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="@string/str_more"
                android:textColor="@color/default_color"
                android:textSize="@dimen/nav_text_size" />


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_screensaver"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:padding="0dp"
        android:visibility="gone">

        <com.dsn.andy.bgmlauncher.view.WatchBoard
            android:id="@+id/wb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</RelativeLayout>



