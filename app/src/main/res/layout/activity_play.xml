<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_play"
    android:paddingLeft="@dimen/header_margin"
    android:paddingRight="@dimen/header_margin">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textSize="@dimen/middle_size"
        android:textColor="@color/default_color"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_below="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/album"
        android:textSize="14sp"
        android:textColor="@color/default_color2"
        android:layout_centerInParent="true"
        />



</RelativeLayout>

    <ImageView
        android:id="@+id/sound_img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:src="@drawable/rotate_cd"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        >

        <ImageView
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_prev"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            />

        <ImageView
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_pause"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            />

        <ImageView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_next"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/position"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="14sp"
            android:textColor="@color/default_color"
            />

        <SeekBar
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/my_progress"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:max="100"
            android:progressDrawable="@drawable/progressbar_color"
            android:thumb="@drawable/bar_shape"
            android:maxHeight="4dp"
            android:indeterminate="false"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            />

        <TextView
            android:text="--:--"
            android:id="@+id/duration"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/default_color"
            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        >

        <ImageView
            android:id="@+id/remove"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_remove"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            />

        <ImageView
            android:id="@+id/love"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_love"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            />

        <ImageView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_store"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            />

        <ImageView
            android:id="@+id/store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_store"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:background="@drawable/ic_store"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_desktop"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            />

    </LinearLayout>




</LinearLayout>


